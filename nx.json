{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "fdrummond",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "start"]
      }
    }
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "projects": {
    "HostApp": {
      "root": "apps/HostApp",
      "tags": []
    },
    "MiniApp": {
      "root": "apps/MiniApp",
      "tags": []
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    }
  ]
}
